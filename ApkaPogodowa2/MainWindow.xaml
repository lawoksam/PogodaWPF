<Window x:Class="ApkaPogodowa2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApkaPogodowa2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="miasto" HorizontalAlignment="Left" Height="22" Margin="268,194,0,0" TextWrapping="Wrap" Text="Number of updates:" VerticalAlignment="Top" Width="198" TextChanged="TextBox_TextChanged2"/>
        <Button x:Name="button" Content="Go" HorizontalAlignment="Left" Margin="524,195,0,0" VerticalAlignment="Top" Click="przycisk_Click" Height="22"/>
        <ListView x:Name="Lista" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="268,237,257,34">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="timeCounter" HorizontalAlignment="Left" Height="22" Margin="268,167,0,0" TextWrapping="Wrap" Text="Last update: " VerticalAlignment="Top" Width="198"/>

    </Grid>
</Window>
